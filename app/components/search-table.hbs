      <li><Generic::Input @label="Available" @checked={{this.tableState.showAvailable}} @onChange={{fn this.toggle 'showAvailable'}} /></li>
      <li><Generic::Input @label="Last Modified" @checked={{this.tableState.showLastModified}} @onChange={{fn this.toggle 'showLastModified'}} /></li>
    </ul>
  </fieldset>
</details>

{{#if @data.length}}
  <table>
    <caption>{{@data.length}} search results</caption>
    <thead>
      <tr>
        {{#if this.tableState.showTitle}}<th>Title</th>{{/if}}
        {{#if this.tableState.showType}}<th>Type</th>{{/if}}
        {{#if this.tableState.showGroup}}<th>Group</th>{{/if}}
        {{#if this.tableState.showSDesc}}<th>Short Desc</th>{{/if}}
        {{#if this.tableState.showLDesc}}<th>Long Desc</th>{{/if}}
        {{#if this.tableState.showSystem}}<th>System</th>{{/if}}
        {{#if this.tableState.showEdition}}<th>Edition</th>{{/if}}
        {{#if this.tableState.showMinPlayers}}<th>Min Players</th>{{/if}}
        {{#if this.tableState.showMaxPlayers}}<th>Max Players</th>{{/if}}
        {{#if this.tableState.showAgeReq}}<th>Age Req</th>{{/if}}
        {{#if this.tableState.showExp}}<th>Exp Req</th>{{/if}}
        {{#if this.tableState.showMaterials}}<th>Materials</th>{{/if}}
        {{#if this.tableState.showDay}}<th>Day</th>{{/if}}
        {{#if this.tableState.showStart}}<th>Start</th>{{/if}}
        {{#if this.tableState.showDuration}}<th>Duration</th>{{/if}}
        {{#if this.tableState.showEnd}}<th>End</th>{{/if}}
        {{#if this.tableState.showGameMasters}}<th>GMs</th>{{/if}}
        {{#if this.tableState.showWebsite}}<th>Website</th>{{/if}}
        {{#if this.tableState.showEmail}}<th>Email</th>{{/if}}
        {{#if this.tableState.showTournament}}<th>Tournament</th>{{/if}}
        {{#if this.tableState.showRound}}<th>Round</th>{{/if}}
        {{#if this.tableState.showTotalRounds}}<th>Total Rounds</th>{{/if}}
        {{#if this.tableState.showMinTime}}<th>Min Time</th>{{/if}}
        {{#if this.tableState.showRegistration}}<th>Registration</th>{{/if}}
        {{#if this.tableState.showCost}}<th>Cost</th>{{/if}}
        {{#if this.tableState.showLocation}}<th>Location</th>{{/if}}
        {{#if this.tableState.showRoom}}<th>Room</th>{{/if}}
        {{#if this.tableState.showTable}}<th>Table</th>{{/if}}
        {{#if this.tableState.showCategory}}<th>Special Category</th>{{/if}}
        {{#if this.tableState.showAvailable}}<th>Tickets Available</th>{{/if}}
        {{#if this.tableState.showLastModified}}<th>Last Modified</th>{{/if}}
      </tr>
    </thead>
    <tbody>
      {{#each @data as |event|}}
        <tr>
          {{#if this.tableState.showTitle}}<td><LinkTo @route="event" @model={{event}}>{{event.title}}</LinkTo></td>{{/if}}
          {{#if this.tableState.showType}}<td>{{event.eventType}}</td>{{/if}}
          {{#if this.tableState.showGroup}}<td>{{event.group}}</td>{{/if}}
          {{#if this.tableState.showSDesc}}<td>{{event.sDesc}}</td>{{/if}}
          {{#if this.tableState.showLDesc}}<td>{{event.lDesc}}</td>{{/if}}
          {{#if this.tableState.showSystem}}<td>{{event.system}}</td>{{/if}}
          {{#if this.tableState.showEdition}}<td>{{event.edition}}</td>{{/if}}
          {{#if this.tableState.showMinPlayers}}<td>{{event.minPlayers}}</td>{{/if}}
          {{#if this.tableState.showMaxPlayers}}<td>{{event.maxPlayers}}</td>{{/if}}
          {{#if this.tableState.showAgeReq}}<td>{{event.ageReq}}</td>{{/if}}
          {{#if this.tableState.showExp}}<td>{{event.exp}}</td>{{/if}}
          {{#if this.tableState.showMaterials}}<td>{{event.materials}}</td>{{/if}}
          {{#if this.tableState.showDay}}<td>{{this.day event.start}}</td>{{/if}}
          {{#if this.tableState.showStart}}<td>{{this.time event.start}}</td>{{/if}}
          {{#if this.tableState.showDuration}}<td>{{event.duration}}</td>{{/if}}
          {{#if this.tableState.showEnd}}<td>{{this.time event.end}}</td>{{/if}}
          {{#if this.tableState.showGameMasters}}<td>{{event.gameMasters}}</td>{{/if}}
          {{#if this.tableState.showWebsite}}<td>{{event.website}}</td>{{/if}}
          {{#if this.tableState.showEmail}}<td>{{event.email}}</td>{{/if}}
          {{#if this.tableState.showTournament}}<td>{{event.tournament}}</td>{{/if}}
          {{#if this.tableState.showRound}}<td>{{event.round}}</td>{{/if}}
          {{#if this.tableState.showTotalRounds}}<td>{{event.totalRounds}}</td>{{/if}}
          {{#if this.tableState.showMinTime}}<td>{{event.minTime}}</td>{{/if}}
          {{#if this.tableState.showRegistration}}<td>{{event.registration}}</td>{{/if}}
          {{#if this.tableState.showCost}}<td>{{event.cost}}</td>{{/if}}
          {{#if this.tableState.showLocation}}<td>{{event.location}}</td>{{/if}}
          {{#if this.tableState.showRoom}}<td>{{event.room}}</td>{{/if}}
          {{#if this.tableState.showTable}}<td>{{event.table}}</td>{{/if}}
          {{#if this.tableState.showCategory}}<td>{{event.category}}</td>{{/if}}
          {{#if this.tableState.showAvailable}}<td>{{event.available}}</td>{{/if}}
          {{#if this.tableState.showLastModified}}<td>{{this.lastMod event.lastModified}}</td>{{/if}}
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
  No results found!
{{/if}}