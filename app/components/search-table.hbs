      <li><Generic::Input @label="Round" @checked={{this.tableState.showRound}} @onChange={{fn this.toggle 'showRound'}} /></li>
      <li><Generic::Input @label="Total Rounds" @checked={{this.tableState.showTotalRounds}} @onChange={{fn this.toggle 'showTotalRounds'}} /></li>
      <li><Generic::Input @label="Min Time" @checked={{this.tableState.showMinTime}} @onChange={{fn this.toggle 'showMinTime'}} /></li>
      <li><Generic::Input @label="Registration" @checked={{this.tableState.showRegistration}} @onChange={{fn this.toggle 'showRegistration'}} /></li>
      <li><Generic::Input @label="Cost" @checked={{this.tableState.showCost}} @onChange={{fn this.toggle 'showCost'}} /></li>
